<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_timetable">

    <fragment
        android:id="@+id/navigation_event"
        android:name="com.example.bonchapp.ui.event.EventFragment"
        tools:layout="@layout/fragment_event">
        <action
            android:id="@+id/action_navigation_event_to_fullEventFragment"
            app:destination="@id/fullEventFragment"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_navgut"
        android:name="com.example.bonchapp.ui.navgut.NavgutFragment"
        tools:layout="@layout/fragment_navgut"/>

    <fragment
        android:id="@+id/navigation_timetable"
        android:name="com.example.bonchapp.ui.timetable.TimetableFragment"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/navigation_storage"
        android:name="com.example.bonchapp.ui.storage.StorageFragment"
        tools:layout="@layout/fragment_storage" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.bonchapp.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/fullEventFragment"
        android:name="com.example.bonchapp.ui.event.FullEventFragment"
        android:label="fragment_full_event"
        tools:layout="@layout/fragment_full_event" >
        <argument
            android:name="eventId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <navigation android:id="@+id/navigation_events"
        app:startDestination="@id/mainEventFragment">
        <fragment
            android:id="@+id/mainEventFragment"
            android:name="com.example.bonchapp.ui.event.MainEventFragment"
            android:label="fragment_main_event"
            tools:layout="@layout/fragment_main_event" >
            <action
                android:id="@+id/action_mainEventFragment2_to_myEventFragment2"
                app:destination="@id/myEventFragment" />
            <action
                android:id="@+id/action_mainEventFragment2_to_favoriteEventFragment"
                app:destination="@id/favoriteEventFragment" />
        </fragment>
        <fragment
            android:id="@+id/myEventFragment"
            android:name="com.example.bonchapp.ui.event.MyEventFragment"
            android:label="fragment_my_event"
            tools:layout="@layout/fragment_my_event" >
            <action
                android:id="@+id/action_myEventFragment2_to_favoriteEventFragment"
                app:destination="@id/favoriteEventFragment" />
            <action
                android:id="@+id/action_myEventFragment2_to_mainEventFragment2"
                app:destination="@id/mainEventFragment" />
        </fragment>
        <fragment
            android:id="@+id/favoriteEventFragment"
            android:name="com.example.bonchapp.ui.event.FavoriteEventFragment"
            android:label="FavoriteEventFragment" >
            <action
                android:id="@+id/action_favoriteEventFragment_to_myEventFragment2"
                app:destination="@id/myEventFragment" />
            <action
                android:id="@+id/action_favoriteEventFragment_to_mainEventFragment2"
                app:destination="@id/mainEventFragment" />
        </fragment>
    </navigation>
</navigation>